<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">





    <TextView
        android:id="@+id/PiadaName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/PiadaImage"
        android:text="placeholder"
        android:textAppearance="?android:attr/textAppearanceLarge"

        />

    <TextView
        android:id="@+id/ListaIngredienti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/PiadaName"
        android:text="placeholderIn"
        android:textAppearance="?android:attr/textAppearanceLarge"

        />

    <Button
        style="@style/GeneralButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:onClick="eliminaPiada"
        android:text="Elimina"
        android:layout_toRightOf="@+id/ListaIngredienti"
        android:layout_margin="10dp"
        />




</RelativeLayout>